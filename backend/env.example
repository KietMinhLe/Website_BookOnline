# Cấu hình Database
DATABASE_URL="mysql://username:password@localhost:3306/website_bookonline"

# Cấu hình Server
PORT=3000
NODE_ENV=development

# Cấu hình JWT (nếu sử dụng authentication)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Cấu hình CORS
CORS_ORIGIN=http://localhost:3001

# Cấu hình Email (nếu sử dụng gửi email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Cấu hình Upload Files
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Cấu hình Payment (nếu sử dụng thanh toán online)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# Cấu hình khác
BCRYPT_ROUNDS=12
